function goTo(page) {
    // 1. تنظيف اسم الصفحة
    let target = page.trim().replace(/^\/+|\/+$/g, '');
    
    // 2. بناء الرابط الكامل عشان نجبر المتصفح ينسى أي مسار قديم
    let newLocation = window.location.origin + window.location.pathname.substring(0, window.location.pathname.lastIndexOf('/')) + '/' + target;
    
    // 3. التوجيه الإجباري
    window.location.replace(newLocation);
